{
  "manifest_version": 2,
  "name": "Llama Life Sidebar",
  "version": "1.3.2",
  "description": "Displays Llama Life in the sidebar.",
  "background": {
    "scripts": ["src/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{298b10ce-2211-47d0-aad6-107b8a733fc5}",
      "strict_min_version": "100.0"
    }
  },
  "author": "semanticdata",
  "options_ui": {
    "page": "src/options/options.html",
    "browser_style": true
  },
  "sidebar_action": {
    "default_icon": {
      "48": "src/icons/48x48.png",
      "96": "src/icons/96x96.png"
    },
    "default_title": "Llama Life",
    "default_panel": "src/sidebar/panel.html"
  },
  "icons": {
    "48": "src/icons/48x48.png",
    "96": "src/icons/96x96.png"
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Alt+Shift+5"
      },
      "description": "Toggle the Llama Life sidebar."
    }
  },
  "browser_action": {
    "48": "src/icons/48x48.png",
    "96": "src/icons/96x96.png"
  }
}
